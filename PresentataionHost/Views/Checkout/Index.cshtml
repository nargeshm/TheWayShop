@model Order
@{
    ViewData["Title"] = "Index";
}


<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Checkout</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Shop" asp-controller="Home">Shop</a></li>
                    <li class="breadcrumb-item active">Checkout</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="row new-account-login">
                <div class="col-sm-6 col-lg-6 mb-3">
                    <div class="title-left">
                        <h3>Account Login</h3>
                    </div>
                    <h5><a data-toggle="collapse" href="#formLogin" role="button" aria-expanded="false">Click here to Login</a></h5>
                    <form asp-controller="Account" asp-action="Login" class="mt-3 collapse review-form-box" id="formLogin">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="Email" class="mb-0">Email Address</label>
                                <input for="Email" type="email" class="form-control" id="Email" placeholder="Enter Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label for="Password" class="mb-0">Password</label>
                                <input type="password" class="form-control" id="Password" placeholder="Password">
                            </div>
                        </div>
                        <button type="submit" class="btn hvr-hover">Login</button>
                    </form>
                </div>
                <div class="col-sm-6 col-lg-6 mb-3">
                    <div class="title-left">
                        <h3>Create New Account</h3>
                    </div>
                    @*<!-- add identity:  -->*@
                    <h5><a data-toggle="collapse" href="#formRegister" role="button" aria-expanded="false">Click here to Register</a></h5>
                    <form asp-controller="Account" asp-action="Signup" class="mt-3 collapse review-form-box" id="formRegister">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="UserName" class="mb-0">UserName</label>
                                <input type="text" class="form-control" id="UserName" placeholder="e.g John Smith">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="PhoneNumber" class="mb-0">PhoneNumber</label>
                                <input type="text" class="form-control" id="PhoneNumber" placeholder="09*********">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="InputEmail1" class="mb-0">Email Address</label>
                                <input type="email" class="form-control" id="InputEmail1" placeholder="your-email@gmail.com">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="InputPassword1" class="mb-0">Password</label>
                                <input type="password" class="form-control" id="InputPassword" placeholder="Password">
                            </div>
                        </div>
                        <button type="submit" class="btn hvr-hover">Register</button>
                    </form>
                </div>
            </div>
        }
        <div class="row">

            <div class="col-sm-6 col-lg-6 mb-3">
                <div class="checkout-address">
                    <div class="title-left">
                        <h3>Billing address</h3>
                    </div>
                    <form id="myform" asp-action="Index" asp-controller="Checkout" class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name">First name *</label>
                                <input asp-for="Name" type="text" class="form-control" id="firstName" placeholder="your name" value="" required>
                                <div class="invalid-feedback"> Valid first name is required. </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Surname">Last name *</label>
                                <input asp-for="Surname" type="text" class="form-control" id="lastName" placeholder="" value="" required>
                                <div class="invalid-feedback"> Valid last name is required. </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UserName">Username *</label>
                            <div class="input-group">
                                <input asp-for="UserName" type="text" class="form-control" id="username" placeholder="" required>
                                <div class="invalid-feedback" style="width: 100%;"> Your username is required. </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email">Email Address *</label>
                            <input asp-for="Email" type="email" class="form-control" id="email" placeholder="yourEmail@gmail.com">
                            <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address">Address *</label>
                            <input asp-for="Address" type="text" class="form-control" id="address" placeholder="" required>
                            <div class="invalid-feedback"> Please enter your shipping address. </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address2">Address 2 *</label>
                            <input asp-for="Address2" type="text" class="form-control" id="address2" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone">phone*</label>
                            <input asp-for="Phone" type="text" class="form-control" id="phone" placeholder="09*********">
                        </div>
                        <div class="row">
                            <div class="col-md-5 mb-3">
                                <label asp-for="Country">Country *</label>
                                <select asp-for="Country" class="wide w-100" id="country">
                                    <option value="Choose..." data-display="Select">Choose...</option>
                                    <option value="United States">United States</option>
                                    <option value="Iran">Iran</option>
                                    <option value="Uk">Uk</option>
                                    <option value="Iraq">Iraq</option>
                                </select>
                                <div class="invalid-feedback"> Please select a valid country. </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="State" for="state">State *</label>
                                <select asp-for="State" class="wide w-100" id="state">
                                    <option data-display="Select">Choose...</option>
                                    <option value="tehran">tehran</option>
                                    <option value="isfahan">isfahan</option>
                                    <option value="shiraz">shiraz</option>
                                    <option value="mashhad">mashhad</option>
                                    <option value="tabriz">tabriz</option>
                                    <option value="ahvaz">ahvaz</option>
                                </select>
                                <div class="invalid-feedback"> Please provide a valid state. </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="ZipCode">Zip *</label>
                                <input asp-for="ZipCode" type="text" class="form-control" id="zip" placeholder="10 numbers" required>
                                <div class="invalid-feedback"> Zip code required. </div>
                            </div>
                        </div>
                        <hr class="mb-4">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="same-address">
                            <label class="custom-control-label" for="same-address">Shipping address is the same as my billing address</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="save-info">
                            <label class="custom-control-label" for="save-info">I accept the payment rules</label>
                        </div>
                        <hr class="mb-4">

                        <input asp-for="UserId" type="hidden" value="@ViewBag.id" />
                        <a class="ml-auto btn hvr-hover text-white px-5 py-3 font-weight-bold" href="">Place Order</a>
                        <div class="col-sm-6 col-lg-6 mb-3">
                            <div class="row">
                                <div class="col-md-12 col-lg-12">
                                    <div class="shipping-method-box">
                                        <div class="title-left">
                                            <h3>Shipping Method</h3>
                                        </div>
                                        <!--add ajax for total price change-->
                                        <div class="mb-4">
                                            <div class="custom-control custom-radio">
                                                <input id="shippingOption" value="Standard" name="shipping-option" class="custom-control-input" checked="checked" type="radio">
                                                <label class="custom-control-label" for="shippingOption">Standard Delivery</label> <span class="float-right font-weight-bold">FREE</span>
                                            </div>
                                            <div class="ml-4 mb-2 small">(3-7 business days)</div>
                                            <div class="custom-control custom-radio">
                                                <input id="shippingOption" value="Express" name="shipping-option" class="custom-control-input" type="radio">
                                                <label class="custom-control-label" for="shippingOption">Express Delivery</label> <span class="float-right font-weight-bold">$10.00</span>
                                            </div>
                                            <div class="ml-4 mb-2 small">(2-4 business days)</div>
                                            <div class="custom-control custom-radio">
                                                <input id="shippingOption" value="Next Business day" name="shipping-option" class="custom-control-input" type="radio">
                                                <label class="custom-control-label" for="shippingOption">Next Business day</label> <span class="float-right font-weight-bold">$20.00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-12">
                                    <div class="odr-box">
                                        <div class="title-left">
                                            <h3>Shopping cart</h3>
                                        </div>
                                        <div class="rounded p-2 bg-light">
                                            @foreach (var item in (ViewBag.Cart as Cart).CartLines)
                                            {
                                                <div class="media mb-2 border-bottom">
                                                    <div class="media-body">
                                                        <a asp-controller="Home" asp-action="Detail" asp-route-ProductId="@item.Product.ProductID">@item.Product.Name</a>
                                                        <div class="small text-muted">Price: $@item.Product.Price <span class="mx-2">|</span>  Qty: @item.Quantity <span class="mx-2">|</span> Subtotal: $@(@item.Quantity * @item.Product.Price)</div>
                                                    </div>
                                                </div>

                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-12">
                                    <div class="order-box">
                                        <div class="title-left">
                                            <h3>Your order</h3>
                                        </div>
                                        <div class="d-flex">
                                            <div class="font-weight-bold">Product</div>
                                            <div class="ml-auto font-weight-bold">Total</div>
                                        </div>
                                        <hr class="my-1">
                                        <div class="d-flex">
                                            <h4>Sub Total</h4>
                                            <div class="ml-auto font-weight-bold"> $ @((ViewBag.Cart as Cart).GetTotalPrice()) </div>
                                        </div>
                                        <div class="d-flex">
                                            <h4>Discount</h4>
                                            <div id="" class="ml-auto font-weight-bold"> $ 40 </div>
                                        </div>
                                        <hr class="my-1">
                                        <div class="d-flex">
                                            <h4>Coupon Discount</h4>
                                            <div id="" class="ml-auto font-weight-bold"> $ 10 </div>
                                        </div>
                                        <div class="d-flex">
                                            <h4>Tax</h4>
                                            <div id="" class="ml-auto font-weight-bold"> $ 2 </div>
                                        </div>
                                        <div class="d-flex">
                                            <h4>Shipping Cost</h4>
                                            <div class="ml-auto font-weight-bold"> Free </div>
                                        </div>
                                        <hr>
                                        <div class="d-flex gr-total">
                                            <h5>Grand Total</h5>
                                            <div class="ml-auto h5"> $ @((ViewBag.Cart as Cart).GetTotalPrice()) </div>
                                        </div>
                                        <hr>
                                    </div>
                                </div>
                                <div class="col-12 d-flex shopping-box"> <a id="btnPlaceOrder" class="ml-auto btn hvr-hover text-white">Place Order</a> </div>
                            </div>
                        </div>
                    </form>
                    <!-- -------##################### end form tag ##################################---------------------- -->
                </div>
            </div>
            

        </div>

    </div>
</div>
<!-- End Cart -->
<!-- End this script: -->

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnPlaceOrder").click(function () {

            var formData = new FormData();
            formData.append("Name", $("#txtFirstName").val());
            formData.append("Surname", $("#lastName").val());
            formData.append("Surname", $("#lastName").val());
            formData.append("Surname", $("#lastName").val());
            formData.append("State", $("#state").val());
            /*formData.append("UserId",$"#j").val());*/
         
                 $.ajax({
                    type: 'POST',
                     url:'@Url.Action("Index", "Checkout")',
                     data: { order: formData },
                     success: function (result) {
                        alert("you order is processing  ...");
                     }


                 });
        });
    });

</script>

<script type="text/javascript">
    function AjaxFormSubmit() {
        //Set the URL.
        var url = $(this).attr("action");

        //Add the Field values to FormData object.
        var formData = new FormData();
        formData.append("firstName", $("#firstName").val());
        formData.append("lastName", $("#txtLastName").val());

        $.ajax({
            type: 'POST',
            url: url,
            data: formData,
            processData: false,
            contentType: false
        }).done(function (response) {
            if (response.Status === "success") {
                $("#lblName").html(response.Name);
            }
        });
    }
</script>

