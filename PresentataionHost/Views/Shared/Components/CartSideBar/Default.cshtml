@model Cart


    <!-- Start Side Menu -->
    <div class="side">
        <a href="#" class="close-side"><i class="fa fa-times"></i></a>
        <ul>
            <li class="cart-box">
                <ul class="cart-list">
                    @foreach (var item in Model.CartLines)
                    {
                        <li>
                            <a asp-controller="Home" asp-action="Detail" asp-route-ProductId="@item.Product.ProductID" class="photo"><img src="~/images/@item.Product.Medias[0].Path" class="cart-thumb" alt="" /></a>
                            <h6><a href="#">@item.Product.Name </a></h6>
                            <p>@item.Quantity x - <span class="price">$@item.Product.Price .00</span></p>
                        </li>
                    }                    <li class="total">
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-default hvr-hover btn-cart">VIEW CART</a>
                        <span class="float-right"><strong>Total</strong>:$ @Model.GetTotalPrice().00</span>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
    <!-- End Side Menu -->